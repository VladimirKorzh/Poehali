<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="android:windowAnimationStyle">@style/Animation.MyAwesomeAnimation</item>
        <item name="android:textColorHint">@color/GhostWhite</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/box</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/GhostWhite</item>
    </style>







    <style name="Animation" />
    <style name="Animation.MyAwesomeAnimation" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_next</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_close_main</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_open_main</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_next</item>
    </style>










    <style name="MyBox">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/box</item>
        <!--<item name="android:padding">5dp</item>-->
        <!--<item name="android:layout_marginTop">0dp</item>-->
        <!--<item name="android:paddingBottom">10dp</item>-->
    </style>

    <style name="MySmallButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/style_button_small</item>
    </style>

    <style name="mySubBoxButtonArea">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="myActivityBackgroundImage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="mySubPanel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
